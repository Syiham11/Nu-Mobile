<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp"
    android:background="@drawable/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/content_kosong"
    tools:context=".module.warga.controller.Home">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/component_margin">

        <TextView
            android:id="@+id/textKosong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Bersediakah anda berinfak untuk organisasi?"
            android:textColor="#0e0f0e"
            android:textSize="20dp"
            android:textStyle="bold"/>

    </LinearLayout>
</LinearLayout>